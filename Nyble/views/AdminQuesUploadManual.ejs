        color: #0b0c10;
        font-size: 3.5rem;
        height: 75px; width: 75px;
        border-radius: 100%;
        right: 1.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        float: right;
        cursor: pointer;
    }

