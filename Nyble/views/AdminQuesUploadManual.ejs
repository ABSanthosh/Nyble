<script>
    function UploadCSV(){
        document.getElementById("sidebarobjid6form").submit();
    }  
    function Archive(){
        document.getElementById("sidebarobjid7form").submit();
    }
    // New question panel adding mechanism

    var startingNo = 1;
    var idNo=1;
    var idList={};
    var tempidList={};
    var temp=2;

    function removePanel(e){
        var element = document.getElementById(e);
        element.remove()
    }

    function addquesPanel(){
        startingNo+=1;
        idNo+=1;
        var a = "questionNoId"+idNo.toString(),
            b="questionId"+idNo.toString(),
            c= "rOne"+idNo.toString(),
            d="tOne"+idNo.toString(),
            e="rTwo"+idNo.toString(),
            f="tTwo"+idNo.toString(),
            g="rThree"+idNo.toString(),
            h="tThree"+idNo.toString(),
            i="rFour"+idNo.toString(),
            j="tFour"+idNo.toString()


        idList[startingNo.toString()] = [];
        
        var panelCode=
        `
        <div id="quesPanelFormat`+idNo.toString()+`" class="quesPanelFormat">
            <div class="PanelAdded">
                <div class="remPanel" id="idOf_`+(idNo).toString()+`" onClick='removePanel((this.parentNode.parentNode.id))'>&minus;</div>
            </div>
            <div class="quesnno">
                <label id="`+a+`" style="font-family: 'Amarante';height: 40px; margin: auto; font-size: 2rem; text-align: center;">#`+(startingNo)+
            `</label>
                <textarea id="`+b+`" class="question" placeholder="Enter Question" oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"'></textarea>
            </div>
            <div class="optionsPanel">
                <div class="optionBox">
                    <input type="radio" class="radio " id="`+c+`" name="Answer">
                    <textarea id="`+d+`" oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"' class="option">Option 1</textarea>
                </div>
                <div class="optionBox">
                    <input type="radio" class="radio" id="`+e+`" name="Answer">
                    <textarea id="`+f+`" oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"' class="option">Option 2</textarea>
                </div>
                <div class="optionBox">
                    <input type="radio" class="radio" id="`+g+`" name="Answer">
                    <textarea id="`+h+`" oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"' class="option">Option 3</textarea>
                </div>
                <div class="optionBox">
                    <input type="radio" class="radio" id="`+i+`" name="Answer">
                    <textarea id="`+j+`" oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"' class="option">Option 4</textarea>
                </div>
                <div class="inputgroup">
                    <input type="time">
                    <input class="Ttime"type="number" placeholder="Marks">
                </div>
            </div>
        </div>
        `
        
        var div = document.createElement('div');
        var adderPlus = document.querySelector(".PanelAdded");
        var mC = document.querySelector(".quesCont");
        div.innerHTML = panelCode;

        var parentnode = document.querySelector(".quesCont");
        parentnode.insertBefore(div,mC.childNodes[mC.childNodes.length-2]);
        
        
        var qCont = document.querySelector(".mainContent");
        qCont.style.scrollBehavior = "smooth";
        qCont.scrollTop = qCont.scrollHeight;
    }



    function widthchanged(mq){
        if (mq.matches) {
            mini = true;
            toggleSidebar();
        } else {
            mini = false;
            toggleSidebar();
    } }   

    const mq = window.matchMedia( "(min-width: 1030px)" ); 

    widthchanged(mq);
    mq.addListener(widthchanged);

    function toggleSidebar() {
        if (mini) {
            document.getElementById("mySidebar").style.width = "271px";
            document.getElementById("main").style.marginLeft = "271px";

            document.getElementById("sidebarobjid1").innerHTML = "Preview";
            document.getElementById("sidebarobjid2").innerHTML = "Time Limit";
            document.getElementById("sidebarobjid3").innerHTML = "Total Marks";
            document.getElementById("sidebarobjid4").innerHTML = "Same Marks for all : ";
            document.getElementById("sidebarobjid7").innerHTML = "Archive";
            document.getElementById("sidebarobjid6").innerHTML = "Upload .CSV";
            

            document.getElementById("logoid").classList.remove("logo");
            document.getElementById("logoid").innerHTML ="";
            document.getElementById("logoidnb").classList.remove("contentplacholder");
            document.getElementById("logoidnb").innerHTML ="Nyble";

            this.mini = false;
        } else {
            if(mq.matches){
                document.getElementById("mySidebar").style.width = "90px";
                document.getElementById("main").style.marginLeft = "90px";
            }else{
                document.getElementById("mySidebar").style.width = "56px";
                document.getElementById("main").style.marginLeft = "56px";
            }
            document.getElementById("sidebarobjid1").innerHTML = "Pre.";
            document.getElementById("sidebarobjid2").innerHTML = "T.L";
            document.getElementById("sidebarobjid3").innerHTML = "T.M";
            document.getElementById("sidebarobjid4").innerHTML = "M.";
            document.getElementById("sidebarobjid7").innerHTML = "Arc.";
            document.getElementById("sidebarobjid6").innerHTML = ".CSV";
            

            document.getElementById("logoid").classList.add("logo");
            document.getElementById("logoid").innerHTML ="Nyble";
            document.getElementById("logoidnb").classList.add("contentplacholder");
            document.getElementById("logoidnb").innerHTML ="";
            this.mini = true;
        }
    }
</script>

