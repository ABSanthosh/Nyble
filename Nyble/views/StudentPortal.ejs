<body id="body">
    <div class="logo_box" id="logo_box">
        <h1 class="logo" id="logo">Nyble</h1>
        <p class="sublogo" id="sublogo">Improvise Adapt Overcome</p>
    </div>

    <img class="icon" style="display: none;" id="sun" src="/Templates/open-iconic/svg/sun.svg" onclick="theme()">  
    <img class="icon" id="moon" src="/Templates/open-iconic/svg/moon.svg" onclick="theme()">

    <div class="loginbox row w-500 mx-auto lightmode" id="loginbox">
        <center>
            <div class="boxtitle" id="boxtitle">Student Portal</div> 
            <form id="aEmail" action="/StudentPortalInstructions" method="POST">
                <div class="input-group mb-3">
                    <input type="text" name="Aemail" id="stud_mail" class="form-control" required placeholder="E-Mail" aria-label="Code" aria-describedby="basic-addon2">
                </div>
            </form>
            <div class="input-group mb-3 buttons">
                <button type="submit" id="admin1" onclick="attendeeEmail()"  class="buttonhover_light">Take Test</button>
            </div>
            
            <form action="/randofact" method="POST">
                <div class="input-group mb-3 ">
                    <button type="submit" id="admin2" formaction="/" class="buttonhover_light">Back</button>
                </div>
            </form>
        </center>
    </div>
</body>

<script>

    function attendeeEmail(){
        document.getElementById("aEmail").submit()
    }
                
    function registration_form(){
        document.getElementById("loginbox").style.cssText= "display:none;"
        document.getElementById("adminloginbox").style.cssText= "display:inline-grid;"
    }

    function back(){
        document.getElementById("loginbox").display="inline-grid"
        document.getElementById("adminloginbox").display="none"
    }
    function theme(){
        var elem,style;
        elem = document.querySelector('#sun');
        style = getComputedStyle(elem);

        if (style.display =="none"){
            /*Sun on press-> Light mode*/
            document.getElementById("moon").style.cssText= "display:none;"
            document.getElementById("sun").style.cssText= "display:block !important;"
            document.getElementById("sun").style.cssText= "filter:invert(1);"

            document.getElementById("body").style.cssText = "background-color: #1B1B1B;"
            document.getElementById("logo").style.cssText = "color:white;"
            document.getElementById("sublogo").style.cssText = "color:white;"

            document.getElementById("boxtitle").style.cssText = "color:black;"

            document.getElementById("admin1").classList.remove("buttonhover_light")
            document.getElementById("admin1").classList.add("buttonhover_dark")
            document.getElementById("admin1").classList.remove("lightmode")
            document.getElementById("admin1").classList.add("darkmode")

            document.getElementById("admin2").classList.remove("buttonhover_light")
            document.getElementById("admin2").classList.add("buttonhover_dark")
            document.getElementById("admin2").classList.remove("lightmode")
            document.getElementById("admin2").classList.add("darkmode")

            document.getElementById("stud_mail").classList.remove("lightmode")
            document.getElementById("stud_mail").classList.add("darkmode")

            document.getElementById("loginbox").classList.remove("lightmode")
            document.getElementById("loginbox").classList.add("darkmode")
            /*d= white, 0 black*/ 
        }else{
            /*Moon on press-> Dark mode*/
            document.getElementById("moon").style.cssText= "display:block;"
            document.getElementById("sun").style.cssText= "display:none;"

            document.getElementById("body").style.cssText = "background-color: #ffffff;"
            document.getElementById("logo").style.cssText = "color:black;"
            document.getElementById("sublogo").style.cssText = "color:black;"

            document.getElementById("boxtitle").style.cssText = "color:white;"

            document.getElementById("admin1").classList.add("buttonhover_light")
            document.getElementById("admin1").classList.remove("buttonhover_dark")
            document.getElementById("admin1").classList.add("lightmode")
            document.getElementById("admin1").classList.remove("darkmode")

            document.getElementById("admin2").classList.add("buttonhover_light")
            document.getElementById("admin2").classList.remove("buttonhover_dark")
            document.getElementById("admin2").classList.add("lightmode")
            document.getElementById("admin2").classList.remove("darkmode")
             
            document.getElementById("stud_mail").classList.add("lightmode")
            document.getElementById("stud_mail").classList.remove("darkmode")

            document.getElementById("loginbox").classList.add("lightmode")
            document.getElementById("loginbox").classList.remove("darkmode")
        }
    }

</script>

